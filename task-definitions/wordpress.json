[
    {
        "name": "wordpress",
        "image": "${aws_ecr_repository.hawordpressrepository.repository_url}:latest",
        "memory": "512",
        "essential": true,
        "portMappings": [
            {
                "hostPort": "80",
                "containerPort": "80",
                "protocol": "tcp"
            }
        ],
        "environment": [
            {
                "name": "WORDPRESS_DB_HOST",
                "value": "${aws_rds_cluster.hawordpress_rds_cluster.endpoint}"
            },
            {
                "name": "WORDPRESS_DB_USER",
                "value": "${var.rdsuser}"
            },
            {
                "name": "WORDPRESS_DB_PASSWORD",
                "value": "${var.rdspassword}"
            }
        ],
    }
]